@page
@model Zealandic_Booking.Pages.Admin.CreateUserModel
@{
}+<h1>Create a new User</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            
            <div class="form-group">
                <label @*asp-for="@Model.Name"*@ class="control-lable">Name</label>
                <input name="gName" @*asp-for="@Model.Name"*@ class="form-control" />
            </div>
            <div class="">
                <select class="form-control btn-dark" name="gRole" aria-label="Roles">
                    <option value="admin">Admin</option>
                    <option value="Teacher">Teacher</option>
                    <option value="Student">Student</option>
                </select>
            </div>
            <div class="form-group">
                <label @*asp-for="@Model.UserName"*@ class="control-lable"></label>
                <input @*asp-for="@Model.UserName"*@ name="gUserName" class="form-control" />
            </div>
            <div class="form-group">
                <label @*asp-for="@Model.Password"*@ class="control-lable"></label>
                <input @*asp-for="@Model.Password"*@ name="gPassword" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/index">Back To Start Page</a>
</div>
