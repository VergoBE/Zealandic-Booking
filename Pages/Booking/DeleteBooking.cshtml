@page       "{id:int}"
@model Zealandic_Booking.Pages.Booking.DeleteBookingModel
@{
}
<h1>Confirm you want to delete the booking</h1>
<div class="alert alert-danger">
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete Booking</button>
        <p>@Model.Message</p>
        <a href="mailto:123@edu.zealand.dk">Send email to notify @Model.SingleBooking.User.Name of his cancelled booking</a>
        <a class="btn btn-primary" asp-page="/Booking/GetBookings">No, Do not delete</a>
    </form>
</div>